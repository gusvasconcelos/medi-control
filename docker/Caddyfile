{
    frankenphp
    order php_server before file_server
}

{$APP_URL:localhost:8000} {
    root * /app/public

    # Enable PHP handler
    php_server

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Static files
    file_server

    # Logs
    log {
        output stdout
        format json
        level INFO
    }
}
